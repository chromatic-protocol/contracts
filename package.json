{
  "name": "@chromatic-protocol/contracts",
  "version": "0.0.1-rc.223",
  "license": "BUSL-1.1",
  "scripts": {
    "test": "forge test -vvv",
    "test:watch": "forge test --watch -vvv --no-match-path \"**/*.integrated.t.sol\"",
    "coverage": "forge coverage --report lcov",
    "hardhat:compile:w": "find contracts -iname '*.sol' | entr -cnr npx hardhat compile",
    "sizer": "forge build --sizes",
    "sizer:hardhat": "hardhat size-contracts",
    "deploy": "hardhat deploy",
    "deploy:arbitrum_goerli": "yarn hardhat:arbitrum_goerli deploy --tags core,periphery",
    "chain": "yarn anvil:start & sleep 1; yarn hardhat deploy --network anvil --reset --tags core,periphery,mockup ; yarn hardhat typechain ; wait",
    "build": "yarn anvil:start & sleep 1; yarn hardhat deploy --network anvil --reset --tags core,periphery ; yarn anvil:stop && yarn hardhat package --typechain-target ethers-v5 --build-dir package-build-v5 --build false",
    "build:ethers-v6": "yarn anvil:start & sleep 1; yarn hardhat deploy --network anvil --reset --tags core,periphery ; yarn anvil:stop && yarn hardhat package --typechain-target ethers-v6 --build-dir package-build-v6 --build false",
    "clean": "hardhat clean && rm -rf deployments/anvil && rm -rf docs/out",
    "anvil:start": "dotenv -- bash -c 'anvil --chain-id 31337 -f https://arb-goerli.g.alchemy.com/v2/$ALCHEMY_KEY --fork-block-number 19474553'",
    "anvil:stop": "kill -INT $(pgrep anvil)",
    "hardhat:arbitrum_goerli": "dotenv -c staging -- yarn hardhat --network arbitrum_goerli --config hardhat.typechain.config.ts",
    "console:arbitrum_goerli": "yarn hardhat:arbitrum_goerli console --no-compile",
    "repl": "hardhat console --network anvil --config hardhat.repl.config.ts --no-compile",
    "format": "prettier --write '(contracts|test|repl|deploy)/**/*.(sol|ts)'",
    "docs": "hardhat --config hardhat-docs.config.ts docgen && hardhat --config hardhat-errors-docs.config.ts docgen"
  },
  "devDependencies": {
    "@chromatic-protocol/hardhat-package": "^0.0.1-dev.18",
    "@gelatonetwork/automate-sdk": "^2.14.0",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.1",
    "@nomicfoundation/hardhat-ethers": "^3.0.4",
    "@nomicfoundation/hardhat-foundry": "^1.0.1",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^1.0.4",
    "@typechain/ethers-v5": "^11.1.0",
    "@typechain/ethers-v6": "^0.4.2",
    "@typechain/hardhat": "^8.0.2",
    "@types/bluebird": "^3.5.38",
    "@types/chai": "^4.2.0",
    "@types/gaussian": "^1.2.0",
    "@types/mocha": ">=9.1.0",
    "@types/node": ">=12.0.0",
    "@uniswap/smart-order-router": "^3.13.7",
    "@wagmi/cli": "^1.3.0",
    "bluebird": "^3.7.2",
    "boxen": "^5",
    "chai": "^4.2.0",
    "date-fns": "^2.30.0",
    "dotenv": "^16.0.3",
    "dotenv-cli": "^7.2.1",
    "ethers": "^6.6.4",
    "gaussian": "^1.3.0",
    "hardhat": "^2.14.0",
    "hardhat-contract-sizer": "^2.8.0",
    "hardhat-deploy": "^0.11.26",
    "hardhat-gas-reporter": "^1.0.8",
    "mocha": "^10.2.0",
    "patch-package": "^7.0.0",
    "prettier": "^2.8.8",
    "prettier-plugin-solidity": "^1.1.3",
    "solidity-coverage": "^0.8.0",
    "solidity-docgen": "^0.6.0-beta.35",
    "ts-node": ">=8.0.0",
    "tsconfig-paths": "^4.2.0",
    "typechain": "^8.1.0",
    "typescript": ">=4.5.0",
    "yarn-audit-fix": "^9.3.12"
  },
  "dependencies": {
    "@chainlink/contracts": "^0.6.1",
    "@openzeppelin/contracts": "^4.9.3",
    "@uniswap/v3-periphery": "^1.4.3"
  },
  "resolutions": {
    "@openzeppelin/contracts": "^4.9.3",
    "minimatch": "^9.0.3"
  }
}
